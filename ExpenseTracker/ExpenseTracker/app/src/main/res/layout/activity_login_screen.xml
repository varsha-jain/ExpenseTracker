<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.expensetracker.activities.LoginScreenActivity">

    <TextView
        android:text="email ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="62dp"
        android:id="@+id/textView8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="33dp"
        android:layout_marginTop="47dp"
        android:id="@+id/emailIDLogin"
        android:hint="emailid@gmail.com" />

    <TextView
        android:text="password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailIDLogin"
        android:layout_alignParentStart="true"
        android:layout_marginTop="77dp"
        android:id="@+id/textView11" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/emailIDLogin"
        android:layout_alignStart="@+id/emailIDLogin"
        android:layout_marginTop="62dp"
        android:id="@+id/passwordLogin"
        android:hint="password" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:id="@+id/button5"
        android:onClick="loginScreenRedirect"
        android:layout_below="@+id/passwordLogin"
        android:layout_alignStart="@+id/passwordLogin"
        android:backgroundTint="@color/colorPrimary" />
</RelativeLayout>
